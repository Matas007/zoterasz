# =========================================================
# OFFLINE / ONLINE REZIMAI
# =========================================================
# APP_MODE=offline  -> nenaudoja jokiu isoriniu API
# APP_MODE=hybrid   -> naudoja Crossref + LLM fallback
# APP_MODE=online   -> Crossref + LLM + Zotero Web API
APP_MODE=offline

# =========================================================
# GOOGLE AI STUDIO (GEMINI) - LLM fallback
# =========================================================
# Reikalinga tik jei naudosite LLM refinement.
GOOGLE_API_KEY=
GOOGLE_MODEL=gemini-1.5-flash
# Kada ijungti LLM fallback (0.0-1.0)
LLM_FALLBACK_CONFIDENCE_THRESHOLD=0.55
# max output tokenu vienam irasui
LLM_MAX_OUTPUT_TOKENS=1024

# =========================================================
# CROSSREF (metaduomenu validacija / DOI paieska)
# =========================================================
# Crossref dazniausiai nereikalauja API rakto.
# Patartina nurodyti kontakta per mailto User-Agent'e.
CROSSREF_ENABLED=true
CROSSREF_MAILTO=your-email@example.com
# max kandidatu kiekis vienai uzklausai
CROSSREF_ROWS=5
# timeout sekundemis
CROSSREF_TIMEOUT_SECONDS=20

# =========================================================
# ANYSTYLE (Ruby CLI)
# =========================================================
# Jei AnyStyle neidiegtas, palikite ANYSTYLE_ENABLED=false
ANYSTYLE_ENABLED=false
ANYSTYLE_BIN=anystyle
# parse arba find (pagal poreiki)
ANYSTYLE_MODE=parse

# =========================================================
# ZOTERO WEB API (pasirinktinai)
# =========================================================
# Reikalinga tik jei norite automatiskai kelti i Zotero.
ZOTERO_ENABLED=false
ZOTERO_API_KEY=
ZOTERO_LIBRARY_ID=
# user | group
ZOTERO_LIBRARY_TYPE=user
ZOTERO_COLLECTION_NAME=AI Import

# =========================================================
# PIPELINE / KOKYBES NUSTATYMAI
# =========================================================
# Ar bandyti atnaujinti DOCX citatas i placeholderius
UPDATE_DOCX_CITATIONS=true
# Ar ieskoti dublikatu tarp visu rasto saraso irasu
DEDUP_ENABLED=true
# Dublikatu title fuzzy threshold (0-100)
DEDUP_TITLE_THRESHOLD=80
# Dublikatu author fuzzy threshold (0-100)
DEDUP_AUTHOR_THRESHOLD=70

# =========================================================
# DEBUG / LOGGING
# =========================================================
LOG_LEVEL=INFO
SAVE_DEBUG_ARTIFACTS=false
